/*--------------------------------grid--------------------------------------------------------*/
   .rounded_corners { 
    width: 50%; 
    background-color: #fff; 
   
    margin: 5px 0 10px 0; 
    border: solid 1px #525252; 
    border-collapse:collapse; 
}
.rounded_corners td { 
     font-size:20px;
    padding: 10px; 
    border: solid 1px #c1c1c1; 

}
.rounded_corners th { 
    padding: 4px 2px; 
    color: #fff; 
    background: #424242 url(grd_head.png) repeat-x top; 
    border-left: solid 1px #525252; 
    font-size: 2.0em; 
}



.rounded_corners .pgr td { 
    border-width: 0; 
    padding: 0 6px; 
    border-left: solid 1px #666; 
    font-weight: bold; 
    line-height: 12px; 
 }   
.rounded_corners .pgr a { color: #525252; text-decoration: none; }
.rounded_corners .pgr a:hover { color: #525252; text-decoration: none; }